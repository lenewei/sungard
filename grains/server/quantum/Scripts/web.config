<?xml version="1.0"?>
<configuration>
   <system.webServer>
      <validation validateIntegratedModeConfiguration="false" />
      <handlers>
         <remove name="BlockViewHandler"/>
         <add name="BlockViewHandler" path="*.cshtml" verb="*" preCondition="integratedMode" type="System.Web.HttpNotFoundHandler" />
      </handlers>
   </system.webServer>
</configuration>